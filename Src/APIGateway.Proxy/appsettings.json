{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "quotation-route": {
        "ClusterId": "quotation-cluster",
        "Match": {
          "Path": "/api/quotes/{**catch-all}"
        },
        "AuthorizationPolicy": "anonymous"
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "AuthorizationPolicy": "anonymous"
      },
      "ai-estimation-route": {
        "ClusterId": "ai-cluster",
        "Match": {
          "Path": "/api/estimate/{**catch-all}"
        },
        "AuthorizationPolicy": "anonymous"
      },      
      "payment-route": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "/api/payments/{**catch-all}"
        },
        "AuthorizationPolicy": "AuthenticatedPolicy"
      },
      "checkout-route": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "/api/v1/checkout/payment-sheet"
        },
        "AuthorizationPolicy": "anonymous"
      }
    },
    "Clusters": {
      "quotation-cluster": {
        "Destinations": {
          "quotation": {
            "Address": "http://quotation-service:5000/"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "auth": {
            "Address": "http://auth-service:5000/"
          }
        }
      },
      "ai-cluster": {
        "Destinations": {
          "ai": {
            "Address": "http://ai-estimation-service:5000/"
          }
        }
      },
      "payment-cluster": {
        "Destinations": {
          "ai": {
            "Address": "http://tranzr-service:8080/"
          }
        }
      }
    }
  }
}
