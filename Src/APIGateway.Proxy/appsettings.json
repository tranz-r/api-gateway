{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "address-route": {
        "ClusterId": "tranzr-cluster",
        "Match": {
          "Path": "/api/v1/address"
        },
        "AuthorizationPolicy": "anonymous"
      },
      "auth-route": {
        "ClusterId": "tranzr-cluster",
        "Match": {
          "Path": "/api/v1/auth/{**catch-all}"
        },
        "AuthorizationPolicy": "AuthenticatedPolicy"
      },
      "checkout-route": {
        "ClusterId": "tranzr-cluster",
        "Match": {
          "Path": "/api/v1/checkout/payment-sheet"
        },
        "AuthorizationPolicy": "anonymous"
      }
    },
    "Clusters": {
      "tranzr-cluster": {
        "Destinations": {
          "ai": {
            "Address": "http://tranzr-service:80/"
          }
        }
      }
    }
  }
}
